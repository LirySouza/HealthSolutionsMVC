@model HealthSolutions_MVC.Models.FormaPagamento

@{
    ViewData["Title"] = "Formas de Pagamento";
}

<h1>Cadastrar</h1>

<h4>Forma de Pagamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeFormaPagamento" class="control-label">Forma de Pagamento</label>
                <input asp-for="NomeFormaPagamento" class="form-control" />
                <span asp-validation-for="NomeFormaPagamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
