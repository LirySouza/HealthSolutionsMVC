@model IEnumerable<HealthSolutions_MVC.Models.Profissional>

@{
    ViewData["Title"] = "Profissional";
}

<h1>Cadastro</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Cadastrar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeProfissional)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascimentoProfissional)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoSexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoProfissional)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeProfissional)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNascimentoProfissional)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoSexo.NomeTipoSexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoProfissional.NomeTipoProfissional)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.ProfissionalId" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a asp-action="Details" asp-route-id="@item.ProfissionalId" class="btn btn-primary"><i class="fa-solid fa-circle-info"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.ProfissionalId" class="btn btn-secundary"><i class="fa-solid fa-trash-can"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
