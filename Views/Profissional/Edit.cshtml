@model HealthSolutions_MVC.Models.Profissional

@{
    ViewData["Title"] = "Profissional";
}

<h1>Editar</h1>

<h4>Profissional</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProfissionalId" />
            <div class="form-group">
                <label asp-for="NomeProfissional" class="control-label">Nome Completo</label>
                <input asp-for="NomeProfissional" class="form-control" />
                <span asp-validation-for="NomeProfissional" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataNascimentoProfissional" class="control-label">Data Nascimento</label>
                <input asp-for="DataNascimentoProfissional" class="form-control" />
                <span asp-validation-for="DataNascimentoProfissional" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoSexoId" class="control-label">Sexo</label>
                <select asp-for="TipoSexoId" class="form-control" asp-items="ViewBag.TipoSexoId"></select>
                <span asp-validation-for="TipoSexoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CpfProfissional" class="control-label">CPF</label>
                <input asp-for="CpfProfissional" class="form-control" />
                <span asp-validation-for="CpfProfissional" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnderecoProfissional" class="control-label">Endereço</label>
                <input asp-for="EnderecoProfissional" class="form-control" />
                <span asp-validation-for="EnderecoProfissional" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoProfissionalId" class="control-label">Profissional</label>
                <select asp-for="TipoProfissionalId" class="form-control" asp-items="ViewBag.TipoProfissionalId"></select>
                <span asp-validation-for="TipoProfissionalId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
