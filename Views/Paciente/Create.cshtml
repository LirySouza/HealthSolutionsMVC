@model HealthSolutions_MVC.Models.Paciente

@{
    ViewData["Title"] = "Paciente";
}

<h1>Cadastrar</h1>

<h4>Paciente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomePaciente" class="control-label">Nome Completo</label>
                <input asp-for="NomePaciente" class="form-control" />
                <span asp-validation-for="NomePaciente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataNascimentoPaciente" class="control-label">Data de Nascimento</label>
                <input asp-for="DataNascimentoPaciente" class="form-control" />
                <span asp-validation-for="DataNascimentoPaciente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoSexoId" class="control-label">Sexo</label>
                <select asp-for="TipoSexoId" class ="form-control" asp-items="ViewBag.TipoSexoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CpfPaciente" class="control-label">CPF</label>
                <input asp-for="CpfPaciente" class="form-control" />
                <span asp-validation-for="CpfPaciente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnderecoPaciente" class="control-label">Endereço</label>
                <input asp-for="EnderecoPaciente" class="form-control" />
                <span asp-validation-for="EnderecoPaciente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefonePaciente" class="control-label">Telefone</label>
                <input asp-for="TelefonePaciente" class="form-control" />
                <span asp-validation-for="TelefonePaciente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
