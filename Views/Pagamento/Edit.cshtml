@model HealthSolutions_MVC.Models.Pagamento

@{
    ViewData["Title"] = "Pagamento";
}

<h1>Editar</h1>

<h4>Pagamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PagamentoId" />
            <div class="form-group">
                <label asp-for="ConsultaId" class="control-label"></label>
                <select asp-for="ConsultaId" class="form-control" asp-items="ViewBag.ConsultaId"></select>
                <span asp-validation-for="ConsultaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FormaPagamentoId" class="control-label"></label>
                <select asp-for="FormaPagamentoId" class="form-control" asp-items="ViewBag.FormaPagamentoId"></select>
                <span asp-validation-for="FormaPagamentoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorPagamento" class="control-label"></label>
                <input asp-for="ValorPagamento" class="form-control" />
                <span asp-validation-for="ValorPagamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataPagamento" class="control-label"></label>
                <input asp-for="DataPagamento" class="form-control" />
                <span asp-validation-for="DataPagamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ObsPagamento" class="control-label"></label>
                <input asp-for="ObsPagamento" class="form-control" />
                <span asp-validation-for="ObsPagamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
